{
  "compilerOptions": {
    "types": ["node", "mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["scripts/**/*", "tests/**/*", "sdk/tests/**/*", "dist"]
}
